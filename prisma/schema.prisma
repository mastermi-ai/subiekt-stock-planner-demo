generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Supplier {
  id        Int       @id
  name      String
  nip       String?
  products  Product[]
}

model Branch {
  id        Int      @id
  name      String
  symbol    String
  stocks    Stock[]
  sales     Sale[]
}

model Product {
  id          Int      @id
  sku         String
  name        String
  supplierId  Int?
  supplier    Supplier? @relation(fields: [supplierId], references: [id])
  stocks      Stock[]
  sales       Sale[]
}

model Stock {
  id        Int      @id @default(autoincrement())
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  branchId  Int
  branch    Branch   @relation(fields: [branchId], references: [id])
  quantity  Float

  @@unique([productId, branchId])
}

model Sale {
  id        Int      @id @default(autoincrement())
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  branchId  Int
  branch    Branch   @relation(fields: [branchId], references: [id])
  date      DateTime
  quantity  Float

  @@unique([productId, branchId, date])
}
